[Unit]
Description=Prometheus Redis Exporter
Documentation=https://github.com/oliver006/redis_exporter
After=network.target

[Service]
Type=simple
User={{ redis_exporter_user }}
Group={{ redis_exporter_group }}
EnvironmentFile={{ redis_exporter_release_dir }}/config
ExecStart={{ redis_exporter_release_dir }}/redis_exporter \
    --web.listen-address={{ redis_exporter_web_listen_address }}

SyslogIdentifier=redis_exporter
Restart=always

[Install]
WantedBy=multi-user.target
